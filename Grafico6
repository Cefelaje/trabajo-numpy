pais = "Afghanistan"
df_pais = df[df["Entity"] == pais]

plt.figure(figsize=(8,5))
sns.lineplot(data=df_pais, x="Year", y="Access to electricity (% of population)", marker="o")

plt.title(f"Evolución del acceso a electricidad en {pais}")
plt.xlabel("Año")
plt.ylabel("% de población con acceso a electricidad")
plt.grid(True)
plt.show()
