# Electricidad por Fuente en Nepal

pais = "Nepal"
df_pais = df[df["Entity"] == pais]

plt.figure(figsize=(8,5))
sns.lineplot(data=df_pais, x="Year", y="Electricity from fossil fuels (TWh)", label="Fósiles", marker="o")
sns.lineplot(data=df_pais, x="Year", y="Electricity from renewables (TWh)", label="Renovables", marker="o")

plt.title(f"Electricidad por fuente en {pais}")
plt.xlabel("Año")
plt.ylabel("Electricidad generada (TWh)")
plt.legend()
plt.grid(True)

# Aquí ya funciona porque importamos FormatStrFormatter
plt.gca().yaxis.set_major_formatter(FormatStrFormatter('%.2f'))

plt.show()
