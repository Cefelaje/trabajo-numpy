avg_access = (
    df.groupby("Entity")["Access to electricity (% of population)"]
      .mean()
      .reset_index()
      .sort_values(by="Access to electricity (% of population)", ascending=False)
)

# Tomar los 10 pa√≠ses con mayor acceso promedio
top10 = avg_access.head(10)

# Crear el gr√°fico
plt.figure(figsize=(12,6))
ax = sns.barplot(
    data=top10,
    x="Entity",
    y="Access to electricity (% of population)",
    palette="viridis"
)

# Mostrar los valores exactos con 3 decimales
for i, value in enumerate(top10["Access to electricity (% of population)"]):
    ax.text(i, value + 0.05, f"{value:.3f}%", ha='center', va='bottom', fontsize=10)

# Personalizaci√≥n
plt.title("Top 10 pa√≠ses con mayor acceso promedio a electricidad", fontsize=14, weight='bold')
plt.xlabel("Pa√≠s")
plt.ylabel("Acceso promedio a electricidad (%)")

# Ajustar eje Y para ver peque√±as diferencias
plt.ylim(99, 100.1)  # üîπ Zoom en la parte alta para apreciar las diferencias decimales
plt.xticks(rotation=45, ha='right')
plt.grid(axis='y', linestyle='--', alpha=0.7)
plt.tight_layout()
plt.show()
